# Production Environment Variables Template
# Copy this file to .env.prod and fill in your actual values

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/gamified_prod?retryWrites=true&w=majority
REDIS_URL=redis://:password@redis-host:6379

# JWT Configuration (Generate strong 256-bit secrets)
JWT_SECRET=your_super_secure_jwt_secret_256_bits_minimum_change_this
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_256_bits_minimum_change_this

# Server Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_from_console
GOOGLE_CLIENT_SECRET=your_google_client_secret_from_console

# Email Configuration (Use production SMTP service)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=your_sendgrid_api_key
EMAIL_FROM=noreply@yourdomain.com

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_256_bits_minimum_change_this
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.io Configuration
SOCKET_CORS_ORIGIN=https://yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/app/app.log

# Cache Configuration
CACHE_TTL=3600
LEADERBOARD_CACHE_TTL=300

# Docker Configuration
GITHUB_REPOSITORY=yourusername/gamified-productivity-app

# Database Credentials (for Docker Compose)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_root_password
MONGO_USERNAME=gamified_user
MONGO_PASSWORD=change_this_user_password
MONGO_DATABASE=gamified_prod
REDIS_PASSWORD=change_this_redis_password

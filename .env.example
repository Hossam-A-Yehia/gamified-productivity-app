# Database Configuration
MONGO_URI=mongodb://localhost:27017/gamified_prod
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=your_email@gmail.com

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:5173

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Redis Cache TTL (in seconds)
CACHE_TTL=3600
LEADERBOARD_CACHE_TTL=300

# Challenge Configuration
MAX_CHALLENGE_PARTICIPANTS=100
CHALLENGE_CLEANUP_INTERVAL=86400000

# Focus Session Configuration
MAX_FOCUS_SESSION_DURATION=180
DEFAULT_POMODORO_DURATION=25
DEFAULT_BREAK_DURATION=5

# XP and Gamification Configuration
BASE_TASK_XP=10
MAX_STREAK_BONUS=50
LEVEL_UP_COIN_BONUS=10

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Development Configuration
ENABLE_CORS=true
ENABLE_LOGGING=true
ENABLE_RATE_LIMITING=true

# Production Configuration (uncomment for production)
# NODE_ENV=production
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/gamified_prod
# REDIS_URL=redis://redis-server:6379
# FRONTEND_URL=https://your-domain.com
# SOCKET_CORS_ORIGIN=https://your-domain.com
